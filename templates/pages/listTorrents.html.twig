{% extends "skeleton.html.twig" %}

{% block title %}{{ 'torrents.title'|trans }} - {{ 'app.name'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('torrents') }}
{% endblock %}

{% block main_script %}
    {{ encore_entry_script_tags('torrents') }}
{% endblock %}

{% block content %}
{% include "fragments/addTorrents.html.twig" %}
    <h1>{{ 'torrents.title'|trans }}</h1>

    <div class="torrent-list">
        {% include "fragments/listTorrents.html.twig" %}
    </div>

    <div class="torrent-panel panel-fixed-bottom">
        <ul class="nav nav-tabs">
            {#<li role="presentation"><a href="#torrent-general">{{ 'torrents.tabMain.title'|trans }}</a></li>#}
            <li role="presentation"  class="active"><a href="#torrent-trackers">{{ 'torrents.tabTrackers.title'|trans }}</a></li>
            <li role="presentation"><a href="#torrent-peers">{{ 'torrents.tabPeers.title'|trans }}</a></li>
        </ul>

        <div class="tab-content">
            {#<div role="tabpanel" class="tab-pane" id="torrent-general">...</div>#}
            <div role="tabpanel" class="tab-pane active" id="torrent-trackers"></div>
            <div role="tabpanel" class="tab-pane" id="torrent-peers">...</div>
        </div>
    </div>
{% endblock %}

{% block templates %}
    {{ parent() }}

    <template id="template-dropzone-preview">
        {% include "fragments/dropzonePreview.html.twig" %}
    </template>
{% endblock %}
