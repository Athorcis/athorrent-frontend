{% extends 'skeleton.html.twig' %}

{% block title %}{{ 'app.name'|trans }} - {{ 'home.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ stylesheet('home')|raw }}
{% endblock %}

{% block content %}
{% if error is defined and error is not empty %}
    <div class="alert alert-danger" role="alert">{{ error|trans }}</div>
{% endif %}

{% cache 'home' app.request.locale %}
    <div class="jumbotron">
        <picture>
            <source srcset="{{ asset_url('images/logo-narrow.png') }}" media="(max-width: 767px)" />
            <img class="logo" srcset="{{ asset_url('images/logo-wide.png') }}" alt="{{ 'app.logo'|trans }}" />
        </picture>
        <div class="jumbotron-text">
            <h1>{{ 'home.welcome'|trans }}</h1>
            <p>{{ 'home.description'|trans|nl2br }}</p>
        </div>
    </div>

    <div class="block">
        <span class="fa fa-fw fa-user"></span>
        <div class="block-text">
            <h2>{{ 'home.accessibility.title'|trans }}</h2>
            <p>{{ 'home.accessibility.content'|trans }}</p>
        </div>
    </div>

    <div class="block">
        <span class="fa fa-fw fa-share"></span>
        <div class="block-text">
            <h2>{{ 'home.sharing.title'|trans }}</h2>
            <p>{{ 'home.sharing.content'|trans }}</p>
        </div>
    </div>

    <div class="block">
        <span class="fa fa-fw fa-lock"></span>
        <div class="block-text">
            <h2>{{ 'home.security.title'|trans }}</h2>
            <p>{{ 'home.security.content'|trans }}</p>
        </div>
    </div>

    <div class="block">
        <span class="fa fa-fw fa-wrench"></span>
        <div class="block-text">
            <h2>{{ 'home.performance.title'|trans }}</h2>
            <p>{{ 'home.performance.content'|trans }}</p>
        </div>
    </div>

    <div class="block">
        <span class="fa fa-fw fa-github"></span>
        <div class="block-text">
            <h2>{{ 'home.openSource.title'|trans }}</h2>
            <p>{{ 'home.openSource.content'|trans({ '%a_start%': '<a href="https://github.com/Athorcis/athorrent-frontend">', '%a_end%': '</a>'})|raw }}</p>
        </div>
    </div>
    {% endcache %}
{% endblock %}
